@model IEnumerable<BethanyShop.Models.Pie>

@{
    ViewData["Title"] = "Home";
    Layout = "_Layout";
}






@foreach (var item in Model)
{
   <div class="col-sm-4 col-lg-4 col-md-4">
<div class="thumbnail">
    <img src="@item.ImageThumbnailUrl" alt="">
    <div class="caption">
        <h3 class="pull-right">@item.Price.ToString("c")</h3>
        <h3>
            <a asp-action="Details" asp-route-id="@item.PieId">@item.Name</a>
        </h3>
        <p>@item.ShortDescription</p>
    </div>
    </div>
</div>
   

    }
